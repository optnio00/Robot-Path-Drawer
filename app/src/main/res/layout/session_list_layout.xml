<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res/android"
    card_view:orientation="vertical"
    card_view:layout_width="match_parent"
    card_view:layout_height="match_parent">
    <android.support.v7.widget.CardView card_view:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" card_view:id="@+id/card_view" card_view:layout_width="match_parent" card_view:layout_height="match_parent" card_view:layout_margin="5dp" >
        <RelativeLayout card_view:layout_width="match_parent" card_view:layout_height="match_parent">
            <TextView card_view:textStyle="bold" card_view:id="@+id/textView" card_view:layout_width="wrap_content" card_view:layout_height="wrap_content" card_view:layout_alignParentTop="true" />
            <TextView card_view:id="@+id/textView2" card_view:layout_width="wrap_content" card_view:layout_height="wrap_content" card_view:layout_marginTop="10dp" card_view:layout_below="@+id/textView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
